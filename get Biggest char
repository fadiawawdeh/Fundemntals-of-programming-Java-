package quiz4;

/**
 *
 * @author Fadi Awawdeh
 */
public class char {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        getBiggestChar ('d','h');
        
        System.out.println(getBiggestChar ('d','h'));
        
    }
    
    
    public static char getBiggestChar (char x, char y) {
        
        if (x>y) {
            return x;
        }
        else  {
            return y;
        }
    }
    
}
