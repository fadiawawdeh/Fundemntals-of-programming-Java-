package lab5;

import java.util.Scanner;

/**
 *
 * @author Fadi Awawdeh
 */
public class Q3 {
    public static void main(String[] args) {
        Scanner input = new Scanner (System.in);
        System.out.println("Enter an integer");
        int num = input.nextInt();
        int max = num;
        while (num>0)
        {
            if (num > max) {
                max = num;
            }
            System.out.println("Enter an integer");
            num = input.nextInt();
            
        }
        System.out.println("Max " + max); 
        
    }
    
}
